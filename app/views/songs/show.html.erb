<input type="hidden" id="song_id" value="<%= @song.id %>">
<div class="container">
  <div class="row">
    <div class="span9 center">
      <%= render 'song_details' %>
    </div>
  </div>
  <div class="row">
    <div class="span9 center">
      <%= render 'song_navigation' %>
    </div>
  </div>
  <div class="row">
    <div class="span9 center">
      <div class="row">
        <div class="span4">
          <%= render 'comments' %>
        </div>
        <div class="span5">
          <%= render "player" %>
          <%= render 'lyrics' %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render :partial => "edit_modal", :locals => { :song => @song } %>
